                    <a href="jobs.html" class="boxed-btn4">See more</a>
                </div>
            </div>
        </div>
        <div class="job_lists">
            <div class="row">
                @if (listStartupsByMonth != null)
                {
                    foreach (var i in listStartupsByMonth)
                    {
                        var displayName = string.IsNullOrEmpty(i.DisplayName) ? "undefined" : i.DisplayName;
                        var address = i.Address;
                        var speciality = i.SpecialityTitle;
                        var establishDate = i.EstablishYear.HasValue ? i.EstablishYear.Value.ToString() : "undefined";
                        var avatarPath = i.AvatarPath;
                        var id = i.UserId;
                        <div class="col-lg-12 col-md-12">
                            <div class="single_jobs white-bg d-flex justify-content-between">
                                <div class="jobs_left d-flex align-items-center">
                                    <div class="thumb p-0 overflow-hidden">
                                        <img src="@avatarPath" class="w-100 h-100" alt="account avatar">
                                    </div>
                                    <div class="jobs_conetent">
                                        <a asp-controller="User" asp-action="ShowDetailInfo" asp-route-id="@id"><h4 class="text-capitalize">@displayName</h4></a>
                                        <div class="links_locat d-flex align-items-center">
                                            <div class="location">
                                                <p> <i class="fa fa-map-marker"></i>@address</p>
                                            </div>
                                            <div class="location">
                                                <p> <i class="fa fa-tag" aria-hidden="true"></i>@speciality</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="jobs_right text-nowrap">
                                    <div class="apply_now">
                                        <a class="heart_mark" href="#"> <i class="ti-heart"></i> </a>
                                        <a href="job_details.html" class="boxed-btn3">Explore</a>
                                    </div>
                                    <div class="date">
                                        <p>Since: @(establishDate)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }
               
            </div>
        </div>
    </div>
</div>

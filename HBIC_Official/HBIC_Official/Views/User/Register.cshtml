<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 pos-relative">
                <div class="login100-pic js-tilt" data-tilt>
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/img/registration.png" alt="IMG">
                    </a>
                </div>
                <div class="form-group pos-absolute bottom-0 mb-22rem">
                    <label for="agree-term" class="label-agree-term fs-14 d-inline"><a asp-controller="Account" asp-action="Login" class="term-service">I have already account</a></label>
                </div>
                @using (Html.BeginForm("Register", "User", new { ReturnUrl = Model?.ReturnUrl }, FormMethod.Post, true, new { @class = "login100-form validate-form" }))
                {
                    @Html.AntiForgeryToken()
                    <span class="login100-form-title">
                        Tạo tài khoản
                    </span>
                    @Html.ValidationMessageFor(m => m.UserName, null, htmlAttributes: new { @class = "fs-12", style = "color: red;" })
                    <div class="wrap-input100 validate-input" data-validate="UserName is required">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "input100", type = "text", name = "UserName", placeholder = "Tên đăng nhập" })
                        <span class="focus-input100">

                        </span>
                        <span class="symbol-input100">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Email, null, htmlAttributes: new { @class = "fs-12", style = "color: red;" })
                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                        @Html.TextBoxFor(model => model.Email, new { @class = "input100", type = "email", placeholder = "Email" })
                        <span class="focus-input100">
                        </span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, null, htmlAttributes: new { @class = "fs-12", style = "color: red;" })

                    <div class="wrap-input100 validate-input" data-validate="Password is required">
                        @Html.TextBoxFor(model => model.Password, new { @class = "input100", type = "password", placeholder = "Mật khẩu" })

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, htmlAttributes: new { @class = "fs-12", style = "color: red;" })
                    <div class="wrap-input100 validate-input" data-validate="Please confirm your password correctly">
                        @*<input class="input100" type="password" name="passwordConfirm" placeholder="Confirm your password">*@
                        @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "input100", type = "password", placeholder = "Xác nhận lại mật khẩu"})

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                        </span>
                    </div>
                        @Html.ValidationMessageFor(m => m.IsCheckPolicy, null, htmlAttributes: new { @class = "fs-12 d-block", style = "color: red;" })
                    <div class="form-group">

                        @*<input type="checkbox" name="agree-term" id="agree-term" class="agree-term mr-2 align-middle" />*@
                        @Html.CheckBoxFor(model => model.IsCheckPolicy, new { @class = "agree-term mr-2 align-middle" })
                        <label for="agree-term" class="label-agree-term fs-14 d-inline"><span><span></span></span>Tôi đồng ý với <a href="#" class="term-service">tất cả chính sách</a></label>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "fs-12", style = "color: red;" })
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Đăng ký
                        </button>
                    </div>
                }

    <script>
        function RefreshAuthEmail() {
            var email = $("#Email").val();
            $.ajax({
                url: '@Url.Action("RefreshAutEmail", "User")'+'?email=' + email,
                type: "GET",
                success: function (data) {
                    if (data.success) {
                        alert("Gửi thành công!");
                    }
                },
                error: function (xhr) {
                    console.log(xhr);
                }
            });
        
        };


